<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="fruit">
  <select id="test">
    SELECT
      name,
      category,
      count,
      price,
      is_del isDel
    FROM
      fruits
    WHERE
      category = 'apple' AND
      price &lt; 60
      <!-- <![CDATA[ price < 60 ]]> -->
  </select>
</mapper>
